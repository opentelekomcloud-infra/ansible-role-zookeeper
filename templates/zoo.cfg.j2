# The number of milliseconds of each tick
tickTime={{ zookeeper_tick_time }}
# The number of ticks that the initial
# synchronization phase can take
initLimit={{ zookeeper_init_limit }}
# The number of ticks that can pass between
# sending a request and getting an acknowledgement
syncLimit={{ zookeeper_sync_limit }}
# the directory where the snapshot is stored.
dataDir={{ zookeeper_data_dir }}
dataLogDir={{ zookeeper_log_dir }}
# the port at which the clients will connect
clientPort={{ zookeeper_bind_port }}
{% for srv in groups['zookeeper'] %}
server.{{ hostvars[srv].zookeeper_id }}={{ hostvars[srv].ansible_host }}:{{ zookeeper_cluster_ports }}
{% endfor %}
